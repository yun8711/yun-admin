{
  "compilerOptions": {
    // 编译目标
    "target": "ESNext",
    // 模块系统类型
    "module": "ESNext",
    // 模块解析策略
    "moduleResolution": "bundler",
    // 严格模式
    "strict": false,
    // 如何处理jsx语法，preserve：保留jsx语法
    "jsx": "preserve",
    // 导入辅助函数
    "importHelpers": true,
    // 是否装饰器语法，生成装饰器元数据
    "experimentalDecorators": true,
    // 是否在检查函数参数类型时使用严格模
    "strictFunctionTypes": false,
    // 是否检查库文件类型
    "skipLibCheck": true,
    // 使用esm规范导入commonjs模块
    "esModuleInterop": true,
    // 是否强制每个文件作为单独的模块编辑
    "isolatedModules": true,
    // 是否允许使用默认导入语法 来导入没有默认导出的模块
    "allowSyntheticDefaultImports": true,
    // 是否强制文件名大小写一致
    "forceConsistentCasingInFileNames": true,
    // 是否生成sourceMap
    "sourceMap": false,
    // 解析模块的基准路径
    "baseUrl": ".",
    // 是否允许编译javascript文件
    "allowJs": false,
    // 是否允许导入json文件，按实际对象推断出类型
    "resolveJsonModule": true,
    // 要包含的库文件
    "lib": ["ESNext", "DOM"],
    // 路径别名
    "paths": {
      "@/*": ["src/*"],
      "@build/*": ["build/*"]
    },
    // 指定要包含的类型文件
    "types": [
      "node",
      "vite/client",
      "element-plus/global",
      "types/**/*.d.ts"
      //      "@pureadmin/table/volar",
      //      "@pureadmin/descriptions/volar"
    ]
  },
  // 需要编辑的文件
  "include": [
    "mock/*.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "types/*.d.ts",
    "vite.config.ts"
  ],
  // 不编译的文件
  "exclude": ["dist", "**/*.js", "node_modules"]
}
